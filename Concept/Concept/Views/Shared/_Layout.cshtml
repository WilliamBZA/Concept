<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")?v=1" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/Images/favicon.ico")">
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Concept Cleaning & Services</h1>
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Gallery", "Gallery", "Home")</li>
                    <li>@Html.ActionLink("Online Enquiry", "Enquiry", "Contact")</li>
                    <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                </ul>
            </nav>
            <div class="callUs">
              <span>Call Us:</span>&nbsp;<span>043 726 1596</span>
            </div>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            &copy; Concept Cleaning & Services @DateTime.Now.Year.ToString()
        </footer>
    </div>
</body>
</html>
